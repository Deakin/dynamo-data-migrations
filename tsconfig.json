{
  "include": ["src"],
  "exclude": ["node_modules", "tests/*"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext.asynciterable", "es2019"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
     "noImplicitAny": true,
     "strictFunctionTypes": true,
    "outDir": "./build",
  },
}
